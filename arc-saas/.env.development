# =============================================================================
# ARC SaaS Development Environment Variables
# =============================================================================
# Copy this to .env for local development

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_DATABASE=arc_saas
DB_SCHEMA=main
DB_SSL=false

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# =============================================================================
# Temporal
# =============================================================================
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=arc-saas
TEMPORAL_TASK_QUEUE=tenant-provisioning

# =============================================================================
# Keycloak
# =============================================================================
KEYCLOAK_ENABLED=true
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=master
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# =============================================================================
# Auth0 (Optional - for Auth0 instead of Keycloak)
# =============================================================================
AUTH0_ENABLED=false
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_MANAGEMENT_AUDIENCE=https://your-tenant.auth0.com/api/v2/

# =============================================================================
# Novu (Self-hosted Notifications)
# =============================================================================
NOVU_ENABLED=true
NOVU_API_KEY=your-api-key-from-novu-dashboard
NOVU_BACKEND_URL=http://localhost:3000
NOVU_SUPPORT_EMAIL=support@example.com

# =============================================================================
# Observability
# =============================================================================
ENABLE_TRACING=1
SERVICE_NAME=arc-saas
OPENTELEMETRY_HOST=localhost
OPENTELEMETRY_PORT=6832

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug
PORT=3001

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=arc-saas

# URLs
CONTROL_PLANE_URL=http://localhost:3001
APP_PLANE_BASE_URL=https://{tenant}.localhost:4000

# =============================================================================
# AWS (Optional - for production deployments)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# Terraform (Optional - for infrastructure provisioning)
# =============================================================================
TERRAFORM_ENABLED=false
TF_CLOUD_ENABLED=false
TF_LOCAL_ENABLED=true
TF_WORKING_DIR=/terraform
