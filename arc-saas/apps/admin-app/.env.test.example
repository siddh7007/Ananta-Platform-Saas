# =============================================================================
# E2E Test Environment Configuration
# =============================================================================
# Copy this file to .env.test and update values for E2E testing

# Application Base URL
BASE_URL=http://localhost:27555

# =============================================================================
# Test User Credentials (for Keycloak Authentication Tests)
# =============================================================================
# These credentials are used when testing real Keycloak authentication
# For mock authentication tests, these are not required

# Test user username (Keycloak username)
TEST_USER_USERNAME=admin

# Test user password
TEST_USER_PASSWORD=admin

# Test user email
TEST_USER_EMAIL=admin@ananta.com

# =============================================================================
# Test Configuration Options
# =============================================================================

# Use real Keycloak authentication (true) or mock auth (false)
# Default: false (mock auth for faster tests)
USE_REAL_AUTH=false

# Headless mode (true) or headed mode with browser UI (false)
# Default: true in CI, false for local debugging
HEADLESS=true

# Test timeout in milliseconds
TEST_TIMEOUT=60000

# =============================================================================
# Backend API Configuration (for integration tests)
# =============================================================================

# Backend API URL (if testing against real backend)
API_URL=http://localhost:14000

# Keycloak URL (if testing real auth)
KEYCLOAK_URL=http://localhost:8180
