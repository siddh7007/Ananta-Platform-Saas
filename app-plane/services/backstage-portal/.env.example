# React Admin App Port
PORT=27510

# ============================================================
# AUTH PROVIDER CONFIGURATION
# ============================================================
# Auth Provider: 'keycloak' for staff tenant users (default)
VITE_AUTH_PROVIDER=keycloak

# ============================================================
# KEYCLOAK CONFIGURATION (Staff Tenant - ananta-saas realm)
# ============================================================
# Keycloak SSO for default staff tenant users ONLY
VITE_KEYCLOAK_URL=http://localhost:8180
VITE_KEYCLOAK_REALM=ananta-saas
VITE_KEYCLOAK_CLIENT_ID=backstage-portal

# Required roles for access (comma-separated)
# Users must have one of these roles to access the portal
VITE_REQUIRED_ROLES=super_admin,admin,engineer

# Gate Logging: Enable [GATE: ...] console logs (default: true)
VITE_ENABLE_GATE_LOGGING=true

# ============================================================
# AUTH0 CONFIGURATION (Optional - Not recommended)
# ============================================================
# Auth0 is available but Keycloak is preferred for staff
# VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
# VITE_AUTH0_CLIENT_ID=your-auth0-client-id
# VITE_AUTH0_AUDIENCE=https://components-platform.com/api
# VITE_AUTH0_ORGANIZATION=org_xxxxxxxxxxxxxxxxx

# Backend API Configuration
VITE_BACKEND_URL=http://localhost:27200

# Supabase Configuration (Customer Data - Kong Gateway)
VITE_SUPABASE_URL=http://localhost:27500/supabase
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# CNS (Component Normalization Service)
VITE_CNS_API_URL=http://localhost:27800
