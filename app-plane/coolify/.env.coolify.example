# =============================================================================
# Coolify Environment Variables - App Plane Production
# =============================================================================
# Copy these to Coolify's Environment Variables section
# Generate secure values for all passwords and secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# DOMAINS (Configure in Coolify UI)
# -----------------------------------------------------------------------------
# Set these as your actual domains in Coolify
# DOMAIN_CNS_API=api.yourdomain.com
# DOMAIN_CNS_DASHBOARD=dashboard.yourdomain.com
# DOMAIN_CUSTOMER_PORTAL=app.yourdomain.com
# DOMAIN_BACKSTAGE=admin.yourdomain.com
# DOMAIN_MINIO=storage.yourdomain.com
# DOMAIN_SUPABASE=db.yourdomain.com

# -----------------------------------------------------------------------------
# DATABASE CREDENTIALS (REQUIRED - Generate secure passwords!)
# -----------------------------------------------------------------------------
SUPABASE_DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
COMPONENTS_V2_DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
COMPONENTS_V2_DB_USER=postgres
COMPONENTS_V2_DB_NAME=components_v2

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# RABBITMQ
# -----------------------------------------------------------------------------
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# MINIO / S3 STORAGE
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
MINIO_PUBLIC_URL=storage.yourdomain.com

# -----------------------------------------------------------------------------
# SUPABASE
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
SUPABASE_JWT_SECRET=CHANGE_ME_GENERATE_32_CHAR_SECRET

# -----------------------------------------------------------------------------
# JWT / AUTH
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_64_CHAR_HEX_SECRET
ADMIN_API_TOKEN=CHANGE_ME_GENERATE_64_CHAR_HEX_SECRET

# -----------------------------------------------------------------------------
# KEYCLOAK / AUTH0 (OIDC)
# -----------------------------------------------------------------------------
AUTH0_ENABLED=true
AUTH0_DOMAIN=auth.yourdomain.com/realms/ananta-saas
AUTH0_AUDIENCE=cbp-frontend,cns-api,account
KEYCLOAK_URL=https://auth.yourdomain.com
KEYCLOAK_REALM=ananta-saas
KEYCLOAK_CLIENT_ID=customer-portal

# -----------------------------------------------------------------------------
# DJANGO
# -----------------------------------------------------------------------------
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=CHANGE_ME_GENERATE_DJANGO_SECRET
ALLOWED_HOSTS=api.yourdomain.com,localhost
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com

# -----------------------------------------------------------------------------
# TEMPORAL WORKFLOWS
# -----------------------------------------------------------------------------
TEMPORAL_ENABLED=true
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=enrichment
TEMPORAL_TASK_QUEUE=cns-enrichment

# -----------------------------------------------------------------------------
# SUPPLIER APIs (Optional - for component enrichment)
# -----------------------------------------------------------------------------
# Mouser
MOUSER_ENABLED=true
MOUSER_API_KEY=

# DigiKey
DIGIKEY_ENABLED=true
DIGIKEY_CLIENT_ID=
DIGIKEY_CLIENT_SECRET=

# Element14/Farnell
ELEMENT14_ENABLED=true
ELEMENT14_API_KEY=

# -----------------------------------------------------------------------------
# AI PROVIDERS (Optional - for AI-powered enrichment)
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_ENABLED=false
OPENAI_API_KEY=

# Claude
CLAUDE_ENABLED=false
CLAUDE_API_KEY=

# Ollama (self-hosted)
OLLAMA_ENABLED=false

# -----------------------------------------------------------------------------
# QUALITY THRESHOLDS
# -----------------------------------------------------------------------------
QUALITY_REJECT_THRESHOLD=70
QUALITY_STAGING_THRESHOLD=94
QUALITY_AUTO_APPROVE_THRESHOLD=95

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API URLs (for frontend builds)
# -----------------------------------------------------------------------------
CNS_API_URL=/api
API_URL=/api
