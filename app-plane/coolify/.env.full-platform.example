# =============================================================================
# Coolify Environment Variables - Full Platform (Control Plane + App Plane)
# =============================================================================
# Copy these to Coolify's Environment Variables section
# Generate secure values for ALL passwords and secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# DOMAINS (Set in Coolify UI per service)
# -----------------------------------------------------------------------------
# DOMAIN_KEYCLOAK=auth.yourdomain.com
# DOMAIN_ADMIN_PORTAL=admin.yourdomain.com
# DOMAIN_CUSTOMER_PORTAL=app.yourdomain.com
# DOMAIN_CNS_API=cns-api.yourdomain.com
# DOMAIN_CNS_DASHBOARD=cns.yourdomain.com
# DOMAIN_BACKSTAGE=backstage.yourdomain.com
# DOMAIN_SUPABASE_STUDIO=db.yourdomain.com
# DOMAIN_TEMPORAL_UI=temporal.yourdomain.com
# DOMAIN_NOVU=novu.yourdomain.com
# DOMAIN_JAEGER=jaeger.yourdomain.com

# -----------------------------------------------------------------------------
# CONTROL PLANE - DATABASE
# -----------------------------------------------------------------------------
CONTROL_PLANE_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# -----------------------------------------------------------------------------
# CONTROL PLANE - REDIS
# -----------------------------------------------------------------------------
CONTROL_PLANE_REDIS_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# CONTROL PLANE - MINIO
# -----------------------------------------------------------------------------
CONTROL_PLANE_MINIO_USER=control-plane-admin
CONTROL_PLANE_MINIO_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# -----------------------------------------------------------------------------
# APP PLANE - DATABASES
# -----------------------------------------------------------------------------
SUPABASE_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS
COMPONENTS_V2_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# -----------------------------------------------------------------------------
# APP PLANE - REDIS
# -----------------------------------------------------------------------------
APP_PLANE_REDIS_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# APP PLANE - RABBITMQ
# -----------------------------------------------------------------------------
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# -----------------------------------------------------------------------------
# APP PLANE - MINIO
# -----------------------------------------------------------------------------
APP_PLANE_MINIO_USER=app-plane-admin
APP_PLANE_MINIO_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# -----------------------------------------------------------------------------
# SUPABASE
# -----------------------------------------------------------------------------
# Generate: openssl rand -base64 32
SUPABASE_JWT_SECRET=CHANGE_ME_BASE64_32_CHAR_SECRET

# -----------------------------------------------------------------------------
# TEMPORAL
# -----------------------------------------------------------------------------
TEMPORAL_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS

# -----------------------------------------------------------------------------
# KEYCLOAK
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
KEYCLOAK_HOSTNAME=auth.yourdomain.com
KEYCLOAK_REALM=ananta-saas
KEYCLOAK_URL=https://auth.yourdomain.com

# -----------------------------------------------------------------------------
# NOVU (Notifications)
# -----------------------------------------------------------------------------
NOVU_API_URL=https://novu-api.yourdomain.com
NOVU_WEB_URL=https://novu.yourdomain.com
NOVU_WS_URL=https://novu-ws.yourdomain.com
# Generate: openssl rand -hex 32
NOVU_JWT_SECRET=CHANGE_ME_HEX_64_CHARS
# Must be exactly 32 characters
NOVU_ENCRYPTION_KEY=CHANGE_ME_EXACTLY_32_CHARACTERS!
NOVU_SECRET_KEY=CHANGE_ME_SECURE_KEY
NOVU_API_KEY=

# -----------------------------------------------------------------------------
# JWT / AUTH (Shared)
# -----------------------------------------------------------------------------
# Generate: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_HEX_64_CHARS
JWT_AUDIENCE=cbp-frontend

# -----------------------------------------------------------------------------
# ADMIN API TOKEN
# -----------------------------------------------------------------------------
# Generate: openssl rand -hex 32
ADMIN_API_TOKEN=CHANGE_ME_HEX_64_CHARS

# -----------------------------------------------------------------------------
# DJANGO
# -----------------------------------------------------------------------------
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=CHANGE_ME_DJANGO_SECRET_KEY

# -----------------------------------------------------------------------------
# WEBHOOK SECRET (Control Plane <-> App Plane)
# -----------------------------------------------------------------------------
# Generate: openssl rand -hex 32
APP_PLANE_WEBHOOK_SECRET=CHANGE_ME_HEX_64_CHARS

# -----------------------------------------------------------------------------
# API URLS
# -----------------------------------------------------------------------------
CONTROL_PLANE_API_URL=https://api.yourdomain.com
CNS_API_URL=https://cns-api.yourdomain.com

# -----------------------------------------------------------------------------
# SUPPLIER APIs (Optional - for component enrichment)
# -----------------------------------------------------------------------------
MOUSER_ENABLED=true
MOUSER_API_KEY=

DIGIKEY_ENABLED=true
DIGIKEY_CLIENT_ID=
DIGIKEY_CLIENT_SECRET=

ELEMENT14_ENABLED=true
ELEMENT14_API_KEY=

# -----------------------------------------------------------------------------
# AI PROVIDERS (Optional)
# -----------------------------------------------------------------------------
OPENAI_ENABLED=false
OPENAI_API_KEY=

CLAUDE_ENABLED=false
CLAUDE_API_KEY=

# -----------------------------------------------------------------------------
# QUALITY THRESHOLDS
# -----------------------------------------------------------------------------
QUALITY_REJECT_THRESHOLD=70
QUALITY_STAGING_THRESHOLD=94
QUALITY_AUTO_APPROVE_THRESHOLD=95

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
